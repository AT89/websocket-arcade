<!DOCTYPE html>
<html>
  <head>
    <title>Tic Tac Toe</title>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      var socket = io();
      window.onload = function(){
        var inputs = document.querySelectorAll("input");
        for(var x = inputs.length - 1; x >= 0; x--){
          inputs[x].addEventListener("keyup", function(){
            socket.emit("move", [this.id, this.value]);
          });
        }

        document.getElementById("reset").addEventListener("click", function(){
          socket.emit("reset");
        });

        socket.on("update", function(newData){
          document.getElementById(newData[0]).value = newData[1];
        });

        socket.on("reset", function(){
          for(var x = inputs.length - 1; x >= 0; x--){
            inputs[x].value = "";
          }
        });

      };
    </script>
    <style>
      *
      {
        margin:0;
        border:0;
        padding:0;
        font-family:"Futura";
      }
      body>*
      {
        margin:0 auto;
        text-align:center;
      }
      input
      {
        font-size:100px;
        background-color:#eee;
        border-radius:5px;
        height:100px;
        line-height:100px;
        width:100px;
        border:0;
        text-align:center;
        font-family:monospace;
      }
      #reset
      {
        color:blue;
        text-decoration:underline;
        cursor:pointer;
      }
    </style>
  </head>
  <body>

    <h1>Tic Tac Toe</h1>

    <table>
      {{#each rows}}
      <tr>
        <td><input id="x0_y{{_id}}" value="{{space0}}" /></td>
        <td><input id="x1_y{{_id}}" value="{{space1}}" /></td>
        <td><input id="x2_y{{_id}}" value="{{space2}}" /></td>
      </tr>
      {{/each}}
    </table>

    <h2 id="reset">Reset</h2>

  </body>
</html>
